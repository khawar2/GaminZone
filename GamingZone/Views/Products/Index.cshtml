@model IEnumerable<GamingWebsite.Models.Ecommerce.Product>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Friends Corner CRM System</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Content/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <link href="~/Content/assets/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Content/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <style>
        table {
            font-size: 15px;
        }

        th {
            color: black;
        }

        td {
            color: #8e8b8b;
        }
    </style>
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html"><img src="~/Images/logo.png" width="50" /> Pro Gamer</a>
            </div>
            <div style="color: white;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;"> <a href="@Url.Action("SignOut","Account")" style=" background-color: lime; /* For browsers that do not support gradients */ background-image: linear-gradient(lime,black);" class="btn btn-success square-btn-adjust">Logout</a> </div>
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="~/Images/logo.png" class="user-image img-responsive" />
                    </li>


                    <li>
                        @Html.ActionLink(" Dashboard", "Index", "Dashboard", null, new { @class = "active-menu fa fa-dashboard fa-2x", style = " font-size: 20px " })
                    </li>
                    <li>
                        @Html.ActionLink("  Add Solo & Teams", "Register", "Account", null, new { @class = " fa fa-desktop fa-2x", style = " font-size: 20px" })
                    </li>
                    <li>
                        @Html.ActionLink("  Add Category", "Create", "Categories", null, new { @class = " fas fa-plus-square fa-2x", style = " font-size: 20px" })
                    </li>
                    <li>
                        @Html.ActionLink("  Add SubCategory", "Create", "SubCategories", null, new { @class = " fas fa-plus-square fa-2x", style = " font-size: 20px" })
                    </li>
                    <li>
                        @Html.ActionLink("  Add Products", "Create", "Products", new { @class = " fas fa-plus-square fa-2x", style = " font-size: 20px" })
                    </li>
                    <li>
                        @Html.ActionLink("   Category", "Index", "Categories", null, new { @class = " fa fa-table fa-2x", style = " font-size: 20px" })
                    </li>
                    <li>
                        @Html.ActionLink("   SubCategory", "Index", "SubCategories", null, new { @class = " fa fa-table fa-2x", style = " font-size: 20px" })
                    </li>
                    <li>
                        @Html.ActionLink("   Products", "Index", "Products", new { @class = " fa fa-table fa-2x", style = " font-size: 20px" })
                    </li>
                    <li>
                        @Html.ActionLink("   Teams Info", "Index", "", null, new { @class = " fa fa-table fa-2x", style = " font-size: 20px" })
                    </li>
                    <li>
                        @Html.ActionLink("   Players Info", "Create", "", null, new { @class = " fa fa-bar-chart-o fa-2x", style = " font-size: 20px" })

                    </li>
                    <li>

                        @Html.ActionLink("  Teams Requests", "Index", "", null, new { @class = " fa fa-table fa-2x", style = " font-size: 20px" })

                    </li>
                    <li>
                        @Html.ActionLink("  Players Requests", "Create", "", null, new { @class = " fa fa-bar-chart-o fa-2x", style = " font-size: 20px" })

                    </li>
                    <li>
                        @Html.ActionLink(" Manage Schedules", "Index", "Events", null, new { @class = " fa fa-table fa-2x", style = " font-size: 20px" })

                    </li>
                    <li>
                        @Html.ActionLink(" Create Schedules", "Create", "Events", null, new { @class = " fa fa-table fa-2x", style = " font-size: 20px" })

                    </li>
                    <li>
                        @Html.ActionLink(" Commission", "Index", "", null, new { @class = " fa fa-table fa-2x", style = " font-size: 20px" })

                    </li>

                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-3x"></i> Settings<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="#">Profile</a>
                            </li>
                            <li>
                                <a href="#">Annoucements</a>
                            </li>

                        </ul>
                    </li>

                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2> <img src="~/Images/logo.png" width="50" />Dashboard</h2>
                        <h5>  Welcome<span style="color:lime"> @WebSecurity.CurrentUserName</span>  , Love to see you back. </h5>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <!-- Form Elements -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Create Products
                            </div>
                            <div style="color:white; background-color:#222323" class="panel-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        @using (Html.BeginForm())
                                        {

                                            @Html.AntiForgeryToken()

                                            <div class="form-horizontal">
                                                <div class="form-group">
                                                    @Html.Label("Search:", new { @class = "control-label col-md-2" })

                                                    <div class="col-md-8">



                                                        @Html.TextBox("SearchCategory", null, new { @class = " form-control ", placeholder = "Search Products...", style = "max-width:100%;" })

                                                        <div class="text-center">
                                                            Search By: @Html.RadioButton("option", "Name") <text>Name</text> @Html.RadioButton("option", "Price") <text> Price </text>
                                                            @Html.RadioButton("option", "Category")<text>Category</text>
                                                        </div>

                                                    </div>
                                                    <div class="col-md-2">
                                                        <button type="submit" class="btn btn-primary" style="background-color: purple; color: white; background-image: linear-gradient(purple,black);">
                                                            <i class="fa fa-search"></i>
                                                            Search

                                                        </button>


                                                    </div>

                                                </div>

                                            </div>


                                        }
                                        <hr />

                                        <p>
                                            @Html.ActionLink(" Create New product", "Create", "", new { @class = "btn btn-success far fa-plus-square", style = "background-color: #0d973e; background-image: linear-gradient(#0d973e,black);" })
                                        </p>
                                        <table class="table table-striped table-dark table-condensed table-bordered " id="dataTables-example">

                                            <tr >
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Subcategory.SubcategoryName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ProductName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Description)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ImagePath)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.UnitPrice)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Seller)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Color)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Date)
                                                </th>
                                                <th></th>
                                            </tr>

                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Subcategory.SubcategoryName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ProductName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>
                                                    <td>
                                                        <img src="~/images/@item.ImagePath" width="100" height="50" />
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UnitPrice)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Seller)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Color)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Date)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink(" Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary fas fa-edit" })
                                                        @Html.ActionLink(" Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-warning far fa-list-alt" })
                                                        @Html.ActionLink(" Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger far fa-trash-alt" })
                                                    </td>
                                                </tr>
                                            }

                                        </table>


                                    </div>
                                </div>
                            </div>
                            <!-- End Form Elements -->
                        </div>
                    </div>

                </div>
                <!-- /. PAGE INNER  -->
            </div>
            <!-- /. PAGE WRAPPER  -->
        </div>


    </div>

    <!-- JQUERY SCRIPTS -->
    <script src="~/Content/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/Content/assets/js/jquery.metisMenu.js"></script>
    <!-- MORRIS CHART SCRIPTS -->
    <script src="~/Content/assets/js/morris/raphael-2.1.0.min.js"></script>
    <script src="~/Content/assets/js/morris/morris.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Content/assets/js/custom.js"></script>
 