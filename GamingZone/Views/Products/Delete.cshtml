@model GamingZone.Models.Product

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Delete Products
            </div>
            <div style="color:white; background-color:#222323" class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <h3 style="color:red;">Are you sure you want to delete this?</h3>
                        <br />
                        <div>

                            <dl class="dl-horizontal">
                                <dt style="text-align:center">
                                    @Html.DisplayNameFor(model => model.SubCategory.SubcategoryName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.SubCategory.SubcategoryName)
                                </dd>
                                <br />
                                <dt style="text-align:center">
                                    @Html.DisplayNameFor(model => model.ProductName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ProductName)
                                </dd>
                                <br />
                                <dt style="text-align:center">
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>
                                <br />
                                <dt style="text-align:center">
                                    @Html.DisplayNameFor(model => model.ImagePath)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ImagePath)
                                </dd>
                                <br />
                                <dt style="text-align:center">
                                    @Html.DisplayNameFor(model => model.UnitPrice)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.UnitPrice)
                                </dd>
                                <br />
                                <dt style="text-align:center">
                                    @Html.DisplayNameFor(model => model.Seller)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Seller)
                                </dd>
                                <br />
                                <dt style="text-align:center">
                                    @Html.DisplayNameFor(model => model.Color)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Color)
                                </dd>
                                <br />
                                <dt style="text-align:center">
                                    @Html.DisplayNameFor(model => model.Date)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Date)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <button type="submit" class="btn btn-danger" style="background-color: red; background-image: linear-gradient(red,black);">
                                        <i class="far fa-trash-alt"></i>
                                        Delete

                                    </button>
                                    @Html.ActionLink(" Back to products", "Index", "", new { @class = "btn btn-warning far fa-list-alt", style = "background-color: orange;  background-image: linear-gradient(orange,black);" })
                                </div>
                            }
                        </div>


                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>

</div>