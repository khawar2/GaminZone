@model IEnumerable<GamingZone.Models.Team>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Teams
            </div>
            <div style="color:white; background-color:#222323" class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <!--Div End-->
                        @using (Html.BeginForm())
                        {

                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.Label("Search:", new { @class = "control-label col-md-2" })

                                    <div class="col-md-8">


                                        @Html.TextBox("SearchTeam", null, new { @class = " form-control ", placeholder = "Search Teams...", style = " max-width:100%;" })

                                    </div>
                                    <div class="col-md-2">
                                        <button type="submit" class="btn btn-primary" style="background-color: purple; color: white; background-image: linear-gradient(purple,black);">
                                            <i class="fa fa-search"></i>
                                            Search
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                        <hr />
                        <p>
                            @Html.ActionLink(" Create New Team", "Create", "", new { @class = "btn btn-success far fa-plus-square", style = "background-color: #0d973e; background-image: linear-gradient(#0d973e,black);" })
                        </p>
                        <table class="table table-bordered " id="dataTables-example">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NoOfPlayers)
                                </th>
                                <th>
                                    Event
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoOfPlayers)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Event.Subject)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @if (Session["Role"].ToString() == "Admin")
                                    {
                                        @Html.ActionLink(" Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary fas fa-edit" })
                                        @Html.ActionLink(" Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning far fa-list-alt" })
                                        @Html.ActionLink(" Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger far fa-trash-alt" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink(" Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary fas fa-edit" })
                                        @Html.ActionLink(" Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning far fa-list-alt" })
                                        @Html.ActionLink(" Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger far fa-trash-alt" })
                                        @Html.ActionLink("My Players", "MyTeamPlayers", "Players", new { teamID = item.Id }, new { @class = "btn btn-success far fa-trash-alt" })

                                    }

                                </td>
                            </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>
</div>
