@model IEnumerable<GamingZone.Models.TeamRequest>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Teams Request
            </div>
            <div style="color:white; background-color:#222323" class="panel-body">
                <div class="row">

                    <table class="table table-bordered " id="dataTables-example">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoOfPlayers)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoOfPlayers)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.ActionLink("Approve", "Approve", new { id = item.Id }, new { @class = "btn btn-success far fa-trash-alt" })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
        <!-- End Form Elements -->
    </div>
</div>

