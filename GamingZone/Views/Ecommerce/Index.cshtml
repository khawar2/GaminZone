@model GamingWebsite.Models.MyViewModel
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>




<script>
    $(document).ready(function () {
        $('.nav2 li  > .sub-menu').parent().hover(function () {
            var submenu = $(this).children('.sub-menu');
            if ($(submenu).is(':hidden')) {
                $(submenu).slideDown(200);
            } else {
                $(submenu).slideUp(200);
            }
        });
    })

</script>
<style>
    body {
        font-family: 'Comic Sans MS','Segoe UI', Tahoma, Geneva, Verdana;
        background-color: #2a2929;
        color: white;
    }

    #hide {
        font-family: 'Comic Sans MS','Segoe UI', Tahoma, Geneva, Verdana;
        font-weight: bold;
        font-size: 20px;
        color: black;
    }

    .carousel-inner img {
        width: 50%; /* Set width to 100% */
        margin: auto;
        min-height: 100px;
    }

    .nav2 li {
        list-style: none;
        padding: 5px 10px;
        width: 300px;
    }

    .nav2 > li {
        float: left;
    }

    .nav2 .sub-menu {
        display: none;
    }

    .name {
        font-size: 15px;
        font-weight: 300;
        color: white;
        text-decoration: none;
    }

    .name2 {
        color: white;
    }

    .sub-menu {
        background-color: limegreen;
    }
</style>
<div class="text-center" style="background-color:#c8c8c8; color:black;">
    <p style="font-size:20px;">
        Welcome <span style="color:#188e13; font-weight:bold;">
            @WebSecurity.CurrentUserName
        </span> To ProGamers Store

    </p>
    @if (TempData["Total"] == null)
    {
<p class="text-center" style="font-weight:bold;">
    Total Bill :
    <span style="padding: 8px; border-radius: 6px; border:thin dashed; border-color: #2a2929; background-color: #cf3d3d; font-size: 20px; ">
        0 PKR</span>
</p>
    }
    else
    {


        <p style="font-weight:bold;">Total Bill : 
            <span style="        padding: 8px;
        border-radius: 6px;
        border: dashed;
        border-color: #2a2929;
        background-color: #cf3d3d;
        font-size: 20px;">
                @TempData["Total"] PKR
            </span>
    </p>
    }
    @Html.ActionLink(" CheckOut", "checkout", "Ecommerce", new { @class = "fas fa-shopping-cart fa-2x btn btn-info", style = "background-color: blue; background-image: linear-gradient(blue,black);" })
   
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button class="close" data-dismiss="alert">&times;</button>
            <strong>Success!</strong>@TempData["msg"]
        </div>
    }
    else
    {

    }
</div>

<br />



<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-lg-3 col-md-3">

            <!-- menu -->
            <div id="MainMenu">

                <div class="list-group panel">


                    <p class="text-center" id="hide">Categories</p>



                    <nav id="hide">
                        <ul class="nav2">
                            @{


                                foreach (var category in Model.ListB.Select(x => x.Category).Distinct())
                                {
                                    <li>
                                        <a class="name" href="">@category.CategoryName <i class="fa fa-caret-down"></i></a>

                                        <ul class="sub-menu">
                                            @foreach (var subcategory in Model.ListB.Where(x => category.CategoryID == x.CategoryID))
                                            {
                                                <li><a class="name2" href="/Ecommerce/Index?SubcategoryName=@subcategory.SubcategoryName">@subcategory.SubcategoryName</a></li>
                                            }
                                        </ul>

                                    </li>
                                }
                            }
                        </ul>

                    </nav>




                </div>
            </div>
        </div>

        <!--Menu End-->

        <div class="col-sm-9 col-lg-9 col-md-9">


            <div style="background-color:darkgreen;" id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>

                </ol>



                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">

                        <img src="~/Images/1.jpg" alt="Image">
                        <div style="background-color:limegreen;" class="carousel-caption">
                            <h3 style="color:aliceblue">Hight Quality</h3>
                            <p>Pro Gamer Offer High quality produts.</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Images/f.jpg" alt="Image">
                        <div style="        background-color: limegreen;" class="carousel-caption">
                            <h3 style="color:aliceblue">Best Prices</h3>
                            <p>Pro Gamer offer Best prices and discounted rates.</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/x.jpg" alt="Image">
                        <div style="        background-color: limegreen;" class="carousel-caption">
                            <h3 style="color:aliceblue">Discounted Deals</h3>
                            <p>Pro Gamer offer best and valuable deals.</p>
                        </div>
                    </div>
                </div>


                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>


    </div>


</div>

