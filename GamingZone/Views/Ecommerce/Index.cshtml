<div class="container">
    <div class="row">


        @foreach (var item in Model.ListA)
        {


            <div class="col-sm-4">

                <div class="ProductId" style="background-color:black;" class="panel panel-primary">
                    <div style="background-color: green; background-image: linear-gradient(green,black);" class="panel-heading">
                        <span style="color:white;">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </span>
                        <div class="alert alert-success">

                            @Html.DisplayFor(modelItem => item.Subcategory.SubcategoryName)
                        </div>
                    </div>
                    <div class="panel-body">


                        <img src="~/images/@item.ImagePath" class="img-responsive" style="width:100%; height: 200px" alt="Image">
                    </div>
                    <div style="background-color:darkslategrey;" class="panel-footer">
                        <label><b>Product Price:</b></label>
                        <img src="~/Images/pk.png" width="20" height="10" /> PKR  @Html.DisplayFor(modelItem => item.UnitPrice)



                        @Html.ActionLink(" View Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-warning far fa-list-alt", style = "background-color: orange; background-image: linear-gradient(orange,black);" })



                    </div>



                </div>
            </div>

        }
    </div>
</div>
