@model GamingZone.Models.Category

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Delete Categories
            </div>
            <div style="color:white; background-color:#222323" class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <!--Div End-->
                        <!--Code Start-->
                        <h3 style="color:red;">Are you sure you want to delete this?</h3>
                        <br />
                        <div>
                            <dl class=" dl-horizontal">
                                <dt style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.CategoryName)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.CategoryName)
                                </dd>
                                <br />
                                <dt style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.Description)

                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>

                            </dl>
                            <br />
                            <br />

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <button type="submit" class="btn btn-danger" style="background-color: red; background-image: linear-gradient(red,black);">
                                        <i class="far fa-trash-alt"></i>
                                        Delete

                                    </button>

                                    @Html.ActionLink(" Back to categories List", "Index", "", new { @class = "btn btn-warning far fa-list-alt", style = "background-color: orange;  background-image: linear-gradient(orange,black);" })
                                </div>
                            }
                        </div>
                        <!--Code End-->

                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>

</div>