@*﻿@model AspNetStore.ViewModels.ShoppingCartViewModel*@
@model GamingZone.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}

<h3>
    <em>Review</em> your cart:
</h3>
<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("Check Out", "Checkout", new { @class = "btn btn-warning btn-lg", @style = "Text-decoration:None" })
    </div>
    <div class="col-md-6">
        @Html.ActionLink("Shop More?", "Store", new { controller = "Products" }, new { @class = "btn btn-Success btn-lg", @style = "Text-decoration:None" })
    </div>
</div>

<div id="update-message">
</div>
<table class="table table-bordered" id="cart-summary" width="100%">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr id="row-@item.CartItemId">
            <td>
                @item.Product.ProductName
                @*Html.ActionLink(item.Product.ProductName,
                    "Details", "Products", new { id = item.ProductId }, null)*@
            </td>
            <td>
                @item.Product.UnitPrice
            </td>
            <td id="item-count-@item.CartItemId">
                @item.Count
            </td>
            <td>
                @Html.ActionLink("Remove from Cart", "RemoveFromCart", new { id = item.ProductId }, new { @class = "btn btn-warning fa fa-shopping-cart" })
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td></td>
        <td></td>
        <td id="cart-total">
            @Model.Total
        </td>
    </tr>
</table>
